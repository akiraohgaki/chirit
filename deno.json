{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": [
      "tests/deno"
    ]
  },
  "tasks": {
    "clean": "echo 'Skip task: clean'",
    "bundle": "deno run --allow-env --allow-read --allow-write --allow-net https://raw.githubusercontent.com/akiraohgaki/helper-script/main/deno-bundle.ts mod.ts mod.bundle.js",
    "build": "deno task clean && deno fmt && deno lint && deno task bundle",
    "test": "deno test && deno task test:e2e",
    "test:app": "deno task test:app:bundle && deno task test:app:serve",
    "test:app:bundle": "cd tests/app && deno run --allow-env --allow-read --allow-write --allow-net https://raw.githubusercontent.com/akiraohgaki/helper-script/main/deno-bundle.ts mod.ts mod.bundle.js",
    "test:app:serve": "cd tests/app && deno run --allow-net --allow-read server.ts",
    "test:e2e": "cd tests/e2e && npx playwright test",
    "test:e2e:chromium": "deno task test:e2e --project chromium",
    "test:e2e:firefox": "deno task test:e2e --project firefox",
    "test:e2e:webkit": "deno task test:e2e --project webkit"
  },
  "imports": {
    "std/": "https://deno.land/std/",
    "jsdom": "https://jspm.dev/jsdom",
    "@playwright/test": "npm:@playwright/test"
  }
}
