{
  "importMap": "import_map.json",
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "mod.ts",
      "version.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "mod.ts",
      "version.ts"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": [
      "src/"
    ]
  },
  "tasks": {
    "clean": "echo 'Skip task: clean'",
    "bundle": "deno run --allow-env --allow-read --allow-write --allow-net https://raw.githubusercontent.com/akiraohgaki/helper-script/main/deno-bundle.ts mod.ts mod.bundle.js",
    "build": "deno task clean && deno fmt && deno lint && deno test && deno task bundle"
  }
}
