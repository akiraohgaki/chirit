{
  "name": "@akiraohgaki/chirit",
  "version": "1.6.1",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "src/**/*.ts",
      "mod.ts",
      "deno.json",
      "README.md",
      "LICENSE"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "esnext",
      "dom",
      "dom.iterable",
      "dom.asynciterable"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "include": [
      "src/",
      "tests/",
      "*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-module-boundary-types"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "*.ts",
      "*.md"
    ],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "test": {
    "include": [
      "tests/unit/"
    ]
  },
  "tasks": {
    "build": "deno task build:setup && deno task build:bundle && deno task build:teardown",
    "build:setup": "echo 'Skip task build:setup'",
    "build:bundle": "deno run --allow-env --allow-read --allow-write --allow-net https://raw.githubusercontent.com/akiraohgaki/helper-script/main/deno-bundle.ts --minify=true mod.ts mod.bundle.js",
    "build:teardown": "echo 'Skip task build:teardown'",
    "test": "deno task test:setup && deno task test:unit && deno task test:e2e && deno task test:teardown",
    "test:setup": "cd tests/e2e && npm install && npx playwright install --with-deps",
    "test:unit": "deno test tests/unit/",
    "test:e2e": "cd tests/e2e && npx playwright test",
    "test:teardown": "echo 'Skip task test:teardown'",
    "serve": "deno run --allow-env --allow-read --allow-write --allow-net jsr:@akiraohgaki/devsrv/server ./tests/playground"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert",
    "jsdom": "https://jspm.dev/jsdom"
  }
}
