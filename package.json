    "devDependencies": {
        "simple-dev-server": "https://github.com/akiraohgaki/simple-dev-server/archive/refs/heads/main.tar.gz",
        "typescript": "*",
        "eslint": "*",
        "@typescript-eslint/parser": "*",
        "@typescript-eslint/eslint-plugin": "*",
        "@types/node": "*"
    }
