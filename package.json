{
    "name": "chirit",
    "version": "1.0.2",
    "description": "A front-end library.",
    "author": "Akira Ohgaki",
    "license": "BSD-2-Clause",
    "homepage": "https://github.com/akiraohgaki/chirit",
    "repository": {
        "type": "git",
        "url": "https://github.com/akiraohgaki/chirit.git"
    },
    "type": "module",
    "main": "dist/chirit.js",
    "types": "dist/chirit.d.ts",
    "scripts": {
        "test": "simple-dev-server",
        "clean": "rm -rf dist",
